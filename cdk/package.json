{
  "name": "cdk",
  "version": "0.1.0",
  "bin": {
    "cdk": "bin/cdk.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc -w",
    "test": "jest",
    "cdk": "cdk",
    "cdk:first-build": "cdklocal bootstrap && npm run build && cdklocal synth && cdklocal deploy",
    "cdk:build": "npm run build && cdklocal synth && cdklocal deploy",
    "bucket:website": "awslocal s3 website s3://shop-bucket/ --index-document index.html",
    "fe:deploy": "cd .. && cd dist && awslocal s3 cp . s3://shop-bucket --recursive",
    "iam:lambda-role": "awslocal iam create-role --role-name lambda-ex --assume-role-policy-document file://trust-policy.json",
    "lambda:list": "awslocal lambda list-functions --max-items 10",
    "lambda:unzip-deploy": "awslocal lambda invoke --function-name CdkStack-CustomCDKBucketDeploymen-be635b49 out --log-type Tail"
  },
  "devDependencies": {
    "@types/jest": "^29.5.1",
    "@types/node": "20.1.7",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "aws-cdk": "2.81.0",
    "ts-node": "^10.9.1",
    "typescript": "~5.0.4"
  },
  "dependencies": {
    "aws-cdk-lib": "2.81.0",
    "constructs": "^10.0.0"
  }
}
